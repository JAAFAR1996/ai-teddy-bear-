# ===================================================================
# üåç AI Teddy Bear - Multi-Region Deployment Configuration Example
# Enterprise-Grade Terraform Variables
# Infrastructure Team Lead: Senior Infrastructure Engineer
# Date: January 2025
# ===================================================================

# Copy this file to terraform.tfvars and update values for your deployment

# ===================================================================
# üåê GLOBAL CONFIGURATION
# ===================================================================

environment = "prod"
domain_name = "ai-teddy.com"
hosted_zone_id = "" # Leave empty to create new hosted zone

# Optional: AWS Account ID for enhanced security
# aws_account_id = "123456789012"

# ===================================================================
# üèóÔ∏è REGIONAL NETWORK CONFIGURATION
# ===================================================================

region_vpc_cidrs = {
  primary = "10.0.0.0/16"   # us-east-1
  europe  = "10.1.0.0/16"   # eu-west-1
  asia    = "10.2.0.0/16"   # ap-southeast-1
}

# ===================================================================
# üîê SECURITY CONFIGURATION
# ===================================================================

ec2_key_name = "ai-teddy-keypair"

# Restrict EKS API access for production
eks_public_access_cidrs = [
  "203.0.113.0/24",  # Your office IP range
  "198.51.100.0/24"  # Your VPN IP range
]

# ===================================================================
# üèóÔ∏è EKS CLUSTER CONFIGURATION
# ===================================================================

eks_cluster_version = "1.28"

node_group_instance_types = {
  general          = ["t3.large", "t3.xlarge"]
  ai_processing    = ["g4dn.xlarge", "g4dn.2xlarge"]
  memory_optimized = ["r5.large", "r5.xlarge"]
}

node_group_scaling = {
  general = {
    min_size     = 2
    max_size     = 10
    desired_size = 3
  }
  ai_processing = {
    min_size     = 1
    max_size     = 5
    desired_size = 2
  }
  memory_optimized = {
    min_size     = 1
    max_size     = 8
    desired_size = 2
  }
}

# ===================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===================================================================

enable_rds                = true
rds_instance_class        = "db.r6g.large"
rds_allocated_storage     = 100
rds_max_allocated_storage = 1000

# ===================================================================
# üìä CACHE CONFIGURATION
# ===================================================================

enable_elasticache     = true
elasticache_node_type  = "cache.r6g.large"
elasticache_num_nodes  = 2

# ===================================================================
# üåê GLOBAL SERVICES
# ===================================================================

enable_global_accelerator = true
enable_cloudfront         = true
enable_global_tables      = true
enable_waf                = true
enable_acm                = true

# ===================================================================
# üîÑ LOAD BALANCER
# ===================================================================

enable_alb = true

# ===================================================================
# üìä MONITORING AND OBSERVABILITY
# ===================================================================

enable_enhanced_monitoring    = true
cloudwatch_log_retention_days = 30
enable_xray_tracing          = true
xray_sampling_rate           = 0.1

# ===================================================================
# üí∞ COST MANAGEMENT
# ===================================================================

monthly_budget_per_region = 5000
enable_cost_optimization  = true
enable_reserved_instances  = false

# ===================================================================
# üîÑ BACKUP AND DISASTER RECOVERY
# ===================================================================

enable_cross_region_backup    = true
backup_retention_days         = 35
point_in_time_recovery_enabled = true

# ===================================================================
# üè∑Ô∏è TAGGING
# ===================================================================

additional_tags = {
  Department = "Engineering"
  Project    = "AI-Teddy-Bear"
  Owner      = "Infrastructure-Team"
}

cost_center    = "AITECH-001"
business_unit  = "AI-Products"
data_classification = "Confidential"

# ===================================================================
# üîí COMPLIANCE
# ===================================================================

enable_coppa_compliance = true
enable_gdpr_compliance  = true
enable_soc2_compliance  = true
data_retention_years    = 7

# ===================================================================
# üõ°Ô∏è ADVANCED SECURITY
# ===================================================================

enable_advanced_security = true
enable_vpc_flow_logs     = true
enable_config_rules      = true
enable_cloudtrail       = true

# ===================================================================
# üåç FEATURE FLAGS
# ===================================================================

enable_multi_region_deployment = true
enable_dev_features            = false
enable_experimental_features   = false

# ===================================================================
# üîß PERFORMANCE OPTIMIZATION
# ===================================================================

enable_performance_insights = true
enable_enhanced_networking  = true
enable_gpu_optimizations    = true

# ===================================================================
# üì± APPLICATION METADATA
# ===================================================================

application_name    = "ai-teddy-bear"
application_version = "1.0.0"

# ===================================================================
# üîß TERRAFORM STATE MANAGEMENT
# ===================================================================

terraform_state_bucket     = "ai-teddy-terraform-state-prod"
terraform_state_lock_table = "ai-teddy-terraform-locks"
enable_state_encryption    = true

# ===================================================================
# üîê IAM AND SECURITY (Optional)
# ===================================================================

# Optional: Assume role for cross-account deployments
# aws_assume_role_arn = "arn:aws:iam::123456789012:role/TerraformDeploymentRole"

# Optional: AWS Profile for authentication
# aws_profile = "ai-teddy-prod" 