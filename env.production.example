# ===================================
# AI Teddy Bear Production Environment
# ===================================

# Version
VERSION=1.0.0

# Domain Configuration
DOMAIN=ai-teddy-bear.com
ACME_EMAIL=admin@ai-teddy-bear.com

# API URLs
API_URL=https://api.ai-teddy-bear.com
WS_URL=wss://ws.ai-teddy-bear.com

# Port Configuration
FRONTEND_PORT=80
API_PORT=8000
WS_PORT=8001
DB_PORT=5432
REDIS_PORT=6379
KAFKA_PORT=9092
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTIC_PORT=9200
LOGSTASH_PORT=5000
KIBANA_PORT=5601
TRAEFIK_PORT=8080

# Database Configuration
DB_USER=teddy_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=ai_teddy_bear_prod

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# AI Service Keys
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Authentication
JWT_SECRET=CHANGE_THIS_VERY_LONG_RANDOM_STRING_FOR_PRODUCTION
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=https://ai-teddy-bear.com,https://www.ai-teddy-bear.com

# Monitoring Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@ai-teddy-bear.com
SMTP_PASSWORD=CHANGE_THIS_APP_PASSWORD
EMAIL_FROM=AI Teddy Bear <notifications@ai-teddy-bear.com>

# Child Safety Configuration
MAX_SESSION_DURATION_MINUTES=30
MAX_DAILY_SESSIONS=10
CONTENT_FILTER_LEVEL=strict
PROFANITY_FILTER_ENABLED=true

# Storage Configuration
UPLOAD_MAX_SIZE_MB=10
AUDIO_STORAGE_DAYS=30
CONVERSATION_RETENTION_DAYS=90

# Performance Tuning
WORKER_COUNT=4
MAX_CONNECTIONS_PER_WORKER=1000
REQUEST_TIMEOUT_SECONDS=30
WEBSOCKET_PING_INTERVAL=30

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: https:;"

# Feature Flags
ENABLE_VOICE_RECORDING=true
ENABLE_EMOTION_ANALYSIS=true
ENABLE_LEARNING_MODE=true
ENABLE_PARENT_REPORTS=true
ENABLE_MULTILINGUAL=true

# Supported Languages
SUPPORTED_LANGUAGES=en,ar,es,fr,de,it,pt,ru,ja,ko,zh

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUDIO_UPLOADS_PER_HOUR=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ai-teddy-backups

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Monitoring & Alerting
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXXXXX/XXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXX
ALERT_EMAIL=alerts@ai-teddy-bear.com

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Debug Mode (set to false in production)
DEBUG=false
LOG_LEVEL=INFO 