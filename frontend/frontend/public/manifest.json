{
  "name": "AI Teddy Bear - Parent Dashboard",
  "short_name": "AI Teddy",
  "description": "AI Teddy Bear - نظام ذكي لمراقبة ورعاية الأطفال مع إشعارات متقدمة وتحليل عاطفي",
  "version": "2.0.0",
  "manifest_version": 3,
  "lang": "ar",
  "dir": "rtl",
  "start_url": "/",
  "scope": "/",
  "id": "ai-teddy-bear-dashboard",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "theme_color": "#007bff",
  "background_color": "#f5f7fa",
  "categories": ["parenting", "education", "kids", "family", "health"],
  "icons": [
    {
      "src": "/favicon.ico",
      "type": "image/x-icon",
      "sizes": "16x16 24x24 32x32 48x48 64x64"
    },
    {
      "src": "/logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "/logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    },
    {
      "src": "/apple-touch-icon.png",
      "type": "image/png",
      "sizes": "180x180",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.png",
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "label": "لوحة التحكم الرئيسية - الكمبيوتر"
    },
    {
      "src": "/screenshots/dashboard-mobile.png",
      "type": "image/png",
      "sizes": "750x1334",
      "form_factor": "narrow",
      "label": "لوحة التحكم الرئيسية - الموبايل"
    },
    {
      "src": "/screenshots/analytics.png",
      "type": "image/png",
      "sizes": "750x1334",
      "form_factor": "narrow",
      "label": "تحليل المشاعر والإحصائيات"
    },
    {
      "src": "/screenshots/notifications.png",
      "type": "image/png",
      "sizes": "750x1334",
      "form_factor": "narrow",
      "label": "الإشعارات والتنبيهات"
    }
  ],
  "shortcuts": [
    {
      "name": "لوحة التحكم",
      "short_name": "Dashboard",
      "description": "الانتقال إلى لوحة التحكم الرئيسية",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "الإشعارات",
      "short_name": "Notifications",
      "description": "عرض الإشعارات والتنبيهات",
      "url": "/notifications",
      "icons": [
        {
          "src": "/icons/notifications-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "إعدادات الطفل",
      "short_name": "Child Settings",
      "description": "إدارة إعدادات الأطفال",
      "url": "/settings",
      "icons": [
        {
          "src": "/icons/settings-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "التحليلات",
      "short_name": "Analytics",
      "description": "عرض التحليلات والإحصائيات",
      "url": "/analytics",
      "icons": [
        {
          "src": "/icons/analytics-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+teddybear",
      "url": "/handle?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "audio/*", "video/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-audio",
      "accept": {
        "audio/*": [".mp3", ".wav", ".m4a", ".ogg"]
      },
      "icons": [
        {
          "src": "/icons/audio-handler.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.aiteddybear.dashboard",
      "id": "com.aiteddybear.dashboard"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/ai-teddy-bear/id123456789",
      "id": "123456789"
    }
  ],
  "offline_enabled": true,
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9"
} 